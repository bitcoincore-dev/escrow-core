{
  "name": "@scrow/core",
  "version": "0.0.8",
  "description": "Core library for BitEscrow API.",
  "author": "Christopher Scott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitescrow/escrow-core.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/module.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/module.mjs"
      }
    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "clean": "rm -rf dist/* coverage .nyc_output",
    "release": "yarn clean && yarn types && yarn build",
    "scratch": "tsx --tsconfig test/tsconfig.json test/scratch.ts",
    "test": "tsx --tsconfig test/tsconfig.json test/tape.ts",
    "types": "tsc"
  },
  "devDependencies": {
    "@cmdcode/core-cmd": "1.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/node": "^20.6.3",
    "@types/tape": "^5.6.1",
    "rollup": "^3.29.2",
    "tape": "^5.6.6",
    "tslib": "^2.6.2",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@cmdcode/buff": "2.0.3",
    "@cmdcode/crypto-tools": "2.5.0",
    "@cmdcode/musig2": "2.3.0",
    "@cmdcode/signer": "^1.1.17",
    "@scrow/tapscript": "2.0.16",
    "zod": "^3.22.2"
  }
}
