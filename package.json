{
  "name": "@scrow/schema",
  "version": "0.0.8",
  "description": "Type and schema validation library for BitEscrow API.",
  "author": "Christopher Scott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitEscrow/escrow-schema.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/module.mjs"
      }
    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "clean": "rm -rf dist/* coverage .nyc_output",
    "release": "yarn clean && yarn types && yarn build",
    "scratch": "tsx test/scratch.ts",
    "types": "tsc"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.13.0",
    "rollup": "^3.2.3",
    "tslib": "^2.6.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "zod": "^3.21.4"
  }
}
