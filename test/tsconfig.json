{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@scrow/core"          : [ "src/index.js"        ],
      "@scrow/core/assert"   : [ "src/assert.js"       ],
      "@scrow/core/contract" : [ "src/lib/contract.js" ],
      "@scrow/core/deposit"  : [ "src/lib/deposit.js"  ],
      "@scrow/core/parse"    : [ "src/lib/parse.js"    ],
      "@scrow/core/proposal" : [ "src/lib/proposal.js" ],
      "@scrow/core/recovery" : [ "src/lib/recovery.js" ],
      "@scrow/core/session"  : [ "src/lib/session.js"  ],
      "@scrow/core/signer"   : [ "src/signer.js"       ],
      "@scrow/core/spend"    : [ "src/lib/spend.js"    ],
      "@scrow/core/tx"       : [ "src/lib/tx.js"       ],
      "@scrow/core/util"     : [ "src/lib/util.js"     ],
      "@scrow/core/witness"  : [ "src/lib/witness.js"  ],
      "@scrow/core/schema"   : [ "src/schema/index.js" ],
      "@scrow/core/validate" : [ "src/validators/index.js" ],
      "@scrow/core/vm"       : [ "src/vm/index.js"     ]
    },
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [ "node_modules" ],
  "include": [ "**/*.ts" ]
}
